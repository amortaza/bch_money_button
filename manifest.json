{
    "manifest_version": 2,

    "name": "BCH Button",

    "version": "0.0.1",

    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],

            "js": ["lib/jquery-3.3.1.slim.min.js", "content.js"]
        }
    ],

    "background": {
        "scripts": ["background.js"]
    },

    "browser_action": {
        "default_icon": "img/bch.png",
        "default_popup": "popup.html",
        "default_title": "BCH is Money!"
    },

    "permissions": ["tabs"]
}